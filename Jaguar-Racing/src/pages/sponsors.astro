---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

// Importación de estilos
import '../styles/patrocinios.css';
import '../styles/NoSelect.css';

const pageTitle = "Patrocinios | Jaguar Racing";

const patrocinadores = [
  'altair.webp', 'ansys.webp', 'bimsa.webp', 'copiisa.webp', 
  'mantemimiento.webp', 'polimex.webp', 'SMI.webp', 
  'solidwor.webp', 'tmx.webp', 'toyota.webp', 'IPN.webp'
];
---

<Layout title={pageTitle}>
    <main>
        <div class="hero">
            <img 
                src="/img/page/Patrocinios.webp" 
                alt="Nuestros Patrocinadores" 
                class="hero__image" 
                fetchpriority="high" 
                decoding="sync"
                loading="eager"
                width="1358"
                height="649"
            />
            <h1 class="hero__title apple-scroll">Alianzas Estratégicas</h1>
        </div>

        <section class="sponsors-section">
            <div class="sponsors-intro apple-scroll">
                <h2 class="sponsors-intro__title">Construyendo el Futuro Juntos</h2>
                <div class="sponsors-intro__text">
                    <p>
                        La ingeniería no se construye sola. Detrás de cada tornillo, cada línea de código y cada kilómetro recorrido, 
                        existe una red de aliados que creen en el talento politécnico mexicano.
                    </p>
                    <p>
                        Su apoyo transforma ideas en máquinas de alto rendimiento.
                    </p>
                </div>

                <a href="/Dossier_SAE_UNI-ES.pdf" target="_blank" class="dossier-btn" download>
                    <div class="dossier-btn__icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 16L7 11H10V4H14V11H17L12 16ZM20 19H4V17H20V19Z"/>
                        </svg>
                    </div>
                    <div class="dossier-btn__content">
                        <span class="dossier-btn__title">DESCARGAR DOSSIER 2025</span>
                        <span class="dossier-btn__subtitle">Conoce los beneficios de patrocinar a Jaguar Racing</span>
                    </div>
                </a>
            </div>

            <div class="sponsors-grid-wrapper">
                <div class="sponsors-grid">
                    {patrocinadores.map((img, index) => (
                        <div class="sponsor-card" style={{ animationDelay: `${index * 0.1}s` }}>
                            <div class="sponsor-card__img-box">
                                <img 
                                    src={`/img/IMGpatrocinadores/${img}`} 
                                    alt="Patrocinador Jaguar Racing" 
                                    loading="lazy" 
                                    width="300" 
                                    height="200"
                                />
                            </div>
                            <div class="sponsor-card__glow"></div>
                        </div>
                    ))}
                    
                    <div class="sponsor-card sponsor-card--cta">
                        <div class="sponsor-card__cta-content">
                            <span>TU LOGO AQUÍ</span>
                            <a href="mailto:contacto@jaguarracing.com" class="sponsor-card__link">Contáctanos</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>